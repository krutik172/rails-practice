<div class="container">
<h1>Thank you for ordering !</h1>

<%=  form_with(url: orders_path(@order), model: @order, method: :post ) do |form| %>


  <div class="row">  
      <div class="col-4">
        <%= form.label :item %>
        
        <% options = options_from_collection_for_select(@items, 'id', 'title') %>
        <%= form.select :item_id, options,  class: "form-control dropdown-menu" %>
        </div>
    </div>
    <br>    

  <div class="row">  
      <div class="col-4">
        <%= form.label :customer %>
        <% options = options_from_collection_for_select(@customers, 'id', 'first_name') %>
        <%= form.select :customer_id, options,  class: "form-control dropdown-menu" %>
        </div>
    </div>
    <br>

 <div class="row">  
    <div class="col-4">
      <%= form.label :quantity %>
      <%= form.number_field :quantity, class: "form-control" %>
      </div>
  </div>
<br>
<div class="row">  
      <div class="col-4">
        <%= form.label :status %>
        <%= form.select :status, Order.statuses.keys %>
        </div>
    </div>
    <br>

    <%= form.submit class: "btn btn-primary " %>
<% end %>

