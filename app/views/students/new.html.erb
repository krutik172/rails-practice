<div class="container">
<h1>Student Registration</h1>

<%=  form_with(url: students_create_path, model: @student, method: :post ) do |form| %>

    <div class="row">  
      <div class="col-4">
        <%= form.label :first_name %>
        <%= form.text_field :first_name, class: "form-control" %>
        </div>
    </div>
<br>

    <div class="row">  
      <div class="col-4">
        <%= form.label :last_name %>
        <%= form.text_field :last_name, class: "form-control" %>
        </div>
    </div>
<br>
    
    <div class="row">  
      <div class="col-4">
        <%= form.label :department %>
        <%= form.text_field :department,  class: "form-control" %>
    </div>
    </div>
<br>
     <div class="row">  
      <div class="col-4">
        <%= form.label :birthdate %>
        <%= form.date_field :birthdate,  class: "form-control" %>
    </div>
    </div>
    <br>
    <div class="row">  
      <div class="col-4">
        <%= form.label :terms %>
        <%= form.check_box  :terms, :checked => false,  class: "form-control" %>
    </div>
    </div>
    <br>
    <% if @student.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@student.errors.count, "error") %> prohibited this article from being saved:</h2>

    <ul>
      <% @student.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<br>
    <%= form.submit class: "btn btn-primary " %>
<% end %>
