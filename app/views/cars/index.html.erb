<div class="title text-center">

<%=  form_with(url: cars_path, model: @car, method: :get, autocomplete: "off" ) do |form| %>
  <div class="row">  
      <div class="col-4">
        <%= form.label :model %>
        <%= form.text_field :model, value: nil,  placeholder: "Search model."  %>
        <%= submit_tag ("Search")%>
        </div>
        <% if @msg %>
        <p> <%= @msg%></p>
        <% end %>
    </div>
<% end %>

<h1>Car's List</h1>
</div>
<table class="table table-striped  text-center">
  <thead>
    <th scope="col">ID</th>
    <th scope="col">Company</th>
    <th scope="col">Model</th>
    <th scope="col">Fuel Type</th>
    <th scope="col">Price</th>
    <th scope="col">Capacity</th>
  </thead>
  <tbody>
 
    <% @cars.each do |car|  %>  
    <tr>
      <td><%=  car.id  %> </td>
      <td><%=  car.company %></td>
      <td><%=  car.model %> </td>
      <td><%=  car.fuel_type  %> </td>
      <td><%=  car.price   %> </td>
      <td><%=  car.capacity   %> </td>
    </tr>
    <% end %>
  
  <tbody>
  </table>
<div>
    <a class="btn btn-primary" type="submit" href="/cars/new">Register car</a>
</div>
<br>
<div>
    <a class="btn btn-primary" type="submit" href="/cars/download_file">Download File</a>

</div>
